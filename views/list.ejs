<%- include("header") -%>
    <div class="box">
        <div class="heading">
            <h1>
                <%= listTitle %>
            </h1>
        </div>
        <div class="form">
            <% for(var i=0 ; i<newListItem.length ; i++){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checked" value=<%= newListItem[i]._id %> onChange ="this.form.submit()">
                        <input type="hidden" name="pageName" value=<%=listTitle %>>
                        <p>
                            <%= newListItem[i].name %>
                        </p>
                    </div>
                </form>
                <% } %>
                    <form action="/"<%=listTitle %> method="post">
                        <input type="text" placeholder="Enter new work" name="item" required>
                        <button type="submit" name="list" value=<%=listTitle %>>+</button>
                    </form>
        </div>
    </div>
    <%- include("footer") -%>